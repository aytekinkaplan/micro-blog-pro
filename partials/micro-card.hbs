{{! Re-usable card for micro blog posts }}
<article class="gh-card micro-card {{post_class}}">
    <a class="gh-card-link" href="{{url}}">
        {{#if feature_image}}
            <img
                src="{{img_url feature_image size="s"}}"
                alt="{{title}}"
                class="micro-card-image"
            />
        {{/if}}
        <div class="micro-card-content">
            {{#if title}}
                <h2 class="micro-card-title">{{title}}</h2>
            {{/if}}
            {{content}}
        </div>
    </a>
</article>