{{!< default}}
<div class="gh-page">
    <div class="gh-container">
        <h1 class="micro-heading">Micro Posts</h1>
        <div class="gh-postfeed">
            {{#foreach posts}}
                {{#has tag="#micro"}}
                    {{> "micro-card" page=../pagination.page }} 
                {{/has}}
            {{/foreach}}
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
