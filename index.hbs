{{!< default}}
<div class="gh-page">
    <div class="gh-container">

        <div class="gh-postfeed">
            <ul class="gh-micro-list">
                {{#foreach posts}}
                    {{#has tag="#micro"}}
                        <li class="{{#if @site.dark_mode}}dark-mode{{/if}}">
                            {{> "micro-card"}} {{!-- Micro card içeriklerini gösterir --}}
                        </li>
                    {{else}}
                        <li class="{{#if @site.dark_mode}}dark-mode{{/if}}">
                            {{> "card"}} {{!-- Normal card içeriklerini gösterir --}}
                        </li>
                    {{/has}}
                {{/foreach}}
            </ul>
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
