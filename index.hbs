{{!< default}}
<div class="gh-page">
    <div class="gh-container">

        <div class="gh-postfeed">
            <ul class="gh-micro-list">
                {{#foreach posts}}
                    {{#has tag="#micro"}}
                        <li>
                            {{> "micro-card" page=../pagination.page }} {{!-- partials/micro-card.hbs --}}
                        </li>
                    {{else}}
                        {{> "card" page=../pagination.page }} {{!-- partials/card.hbs --}}
                    {{/has}}
                {{/foreach}}
            </ul>
        </div>

        {{!-- If JS isn't enabled, fallback to standard pagination --}}
        <noscript>
            <div class="gh-pagination">
                {{pagination}}
            </div>
        </noscript>
    </div>
</div>
